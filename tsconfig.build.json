{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/test-helpers/**/*.{js,ts}",
    "src/test/**/*.{js,ts}"
  ]
}
